/**index.wxss**/
.translang{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-top: #F3F3F3 1px solid;
  border-bottom: #E6E6E6 1px solid;
  background-color: #FFF;
}

.from{
  width: 40%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.to{
  width: 40%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.switch{
  width: 20%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.switch image{
  width: 60%;
  height: 80rpx;
}

.from-data{
  width: 100%;
  background-color: #FFF;
  display: flex;
  border-bottom: #E6E6E6 1px solid;
}

.from-data-input{
  width: 85%;
}

.from-data-input textarea{
  margin: 30rpx;
  height: 200rpx;
}

.cancle{
  width: 15%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancle image{
  width: 50rpx;
  height: 50rpx;
}

.translate{
  width: 100%;
  background-color: #FFF;
}

.translate button{
  margin: 15rpx;
  background-color: #FFF;
}

.to-data{
  width: 100%;
  margin: 0px;
  background-color: #FFF;
  border-top: #E6E6E6 1px solid;
  border-bottom: #E6E6E6 1px solid;
  display: flex;
  align-items: center;
}

.to-data-result{
  margin: 30rpx;
  height: 200rpx;
}

.result-list{
  width: 100%;
  min-height: 100rpx;
  background-color: #F5F5F5;
}

.result-item{
  width: 100%;
  height: 100rpx;
  background-color: #FFF;
  margin-bottom: 5px;
  border-top: #E6E6E6 1px solid;
  border-bottom: #E6E6E6 1px solid;
  display: flex;
  align-items: center
}

.search-word{
  margin: 0px 30rpx;
}

.search-result{
  font-size: 30rpx;
  color: #c1c1c1
}

.detail{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
  background-color: #FFF;
  border-top: #E6E6E6 1px solid;
  border-bottom: #E6E6E6 1px solid;
  padding: 30rpx;
}

.explain{
  font-size: 30rpx;
  color: #999;
  margin-left: 30rpx;
}

.result{
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}

.word{
  color: #4395FF;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.nature{
  font-style: italic;
  color: #999;
  margin-right: 30rpx;
  font-size: 30rpx;
}

.meaning{
  font-size: 35rpx;
}